<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- Style sheet link -->
  <link rel="stylesheet" href="/css/styles.css">

  <!-- Google Fonts Link -->
  <link href="https://fonts.googleapis.com/css?family=Merriweather:400,900" rel="stylesheet">

  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


  <title>Books</title>
</head>

<body class="discussBook">

  <!-- Home page link -->
  <a href="/books">
    <button class="homeBtn" type="button" name="home"> <i class="fa fa-home" aria-hidden="true"></i> </button>
  </a>
  <br>

  <!-- Book Details -->
  <h1> <%= book.title %> </h1>
  <h3> By <%= book.author %> </h3>

  <div class="row">

    <div class="col-6">
      <img class="discussIMG" src="<%= book.imgURL %>" alt="book image">
    </div>

    <div class="col-6 moveRight">
        <p class=""><%= book.description %></p>
    </div>

  </div>


  <!-- All Comments -->
  <div class="container-fluid eachComment">
    <% for(var i = 0; i < comment.length; i++) {  %>
      <div class="card">

        <b>
          <%= comment[i].name %> :
        </b>
        <p>
          <%= comment[i].content %>
        </p>
        <!-- Delete Comment -->
        <h6><a class="delete-comment delete" href="/del/comment/<%= comment[i].id %>">

          <i class="fa fa-trash" aria-hidden="true"></i>

        </a></h6>
      </div>
      <% } %>
  </div>

  <!-- Add Comments -->
  <form action="/discussBook/<%= book.id %>" method="post">
    <input type="text" name="name" placeholder="Name" required>
    <br>
    <input type="text" name="content" placeholder="Comment" required>
    <br>
    <input class="createBtn" type="submit" value="Add Comment">
  </form>




</body>

</html>
